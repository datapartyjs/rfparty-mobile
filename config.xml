<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.dataparty.rfparty" version="1.1.12" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>rfparty</name>
  <description>A bluetooth tricorder</description>
  <author email="code@dataparty.xyz" href="https://dataparty.xyz">dataparty</author>
  <icon src="config/icon-full.png" />
  <platform name="android">
    <preference name="android-minSdkVersion" value="30" />
    <preference name="android-targetSdkVersion" value="34" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="AndroidLaunchMode" value="singleInstance" />
    <exclude-files pattern="nodejs-project/.parcel-cache/" />
    <!--<resource-file src="resources/android/values/colors.xml" target="/app/src/main/res/values/colors.xml" /> -->
    <icon background="resources/android/icon/mipmap-mdpi/ic_launcher_adaptive_back.png" density="mdpi" foreground="resources/android/icon/mipmap-mdpi/ic_launcher_adaptive_fore.png" />
    <icon background="resources/android/icon/mipmap-hdpi/ic_launcher_adaptive_back.png" density="hdpi" foreground="resources/android/icon/mipmap-hdpi/ic_launcher_adaptive_fore.png" />
    <icon background="resources/android/icon/mipmap-xhdpi/ic_launcher_adaptive_back.png" density="xhdpi" foreground="resources/android/icon/mipmap-xhdpi/ic_launcher_adaptive_fore.png" />
    <icon background="resources/android/icon/mipmap-xxhdpi/ic_launcher_adaptive_back.png" density="xxhdpi" foreground="resources/android/icon/mipmap-xxhdpi/ic_launcher_adaptive_fore.png" />
    <icon background="resources/android/icon/mipmap-xxxhdpi/ic_launcher_adaptive_back.png" density="xxxhdpi" foreground="resources/android/icon/mipmap-xxxhdpi/ic_launcher_adaptive_fore.png" />
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/android/splash/splashscreen.xml" />
    <preference name="AndroidWindowSplashScreenBackground" value="#000000" />
    <allow-intent href="market:*" />
    <config-file parent="/manifest" target="AndroidManifest.xml">
      <uses-feature android:name="android.hardware.bluetooth" android:required="true" />
      <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />
      <uses-feature android:name="android.hardware.location" android:required="true" />
      <uses-feature android:name="android.hardware.location.gps" android:required="true" />
      <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
      <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
      <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
      <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
      <uses-permission android:name="android.permission.BLUETOOTH" />
      <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
      <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
      <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
      <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    </config-file>
    
  </platform>
  <content src="index.html" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="ios">
      <allow-intent href="itms:*" />
      <allow-intent href="itms-apps:*" />
  </platform>
  <hook src="scripts/parcel.js" type="before_build" />
  <hook src="scripts/parcel.js" type="before_run" />
  <universal-links>
    <host name="rfparty.xyz" scheme='http'>
        <path url="/query/*" event="sharedQuery"/>
    </host>
    <host name="rfparty.xyz" scheme='https'>
        <path url="/query/*" event="sharedQuery"/>
    </host>
  </universal-links>

</widget>
